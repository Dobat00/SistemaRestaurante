@model List<Cliente>


<div class="container"> 
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Consulta de clientes
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="Cliente" asp-action="Cadastro" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Cadastrar cliente</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Nome do cliente
        </th>
    
    
        <th>
            Valor da conta
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Value</td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Editar
                    </a>
                        <a asp-controller="Cliente" asp-action="Delete" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Deletar
                        </a>
                </div>
            </td>
        </tr>

            
        }
    </tbody>

</table>